# Domain configuration
DOMAIN_NAME=your-domain.com

# Redis configuration
REDIS_PASSWORD=your-secure-redis-password

# Porkbun API credentials for SSL certificates
PORKBUN_API_KEY=your-porkbun-api-key
PORKBUN_SECRET_KEY=your-porkbun-secret-key

# CrowdSec bouncer API key (generate after first run)
CROWDSEC_BOUNCER_API_KEY=your-crowdsec-bouncer-key

# Google Maps API key (optional)
NEXT_PUBLIC_GOOGLE_MAPS_API_KEY=your-google-maps-api-key

# OpenWeatherMap API key (optional)
NEXT_PUBLIC_OPENWEATHER_API_KEY=your-openweather-api-key

# Tailscale configuration
TAILSCALE_AUTHKEY=your-tailscale-authkey

# System user/group ID for file permissions
GID=1000